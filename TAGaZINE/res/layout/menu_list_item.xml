<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/magazine_detail_bottom_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@color/menu_subbackgroundcolor" >

        <TextView
            android:id="@+id/tvsubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/menu_subtitle_font_margin"
            android:text="text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/menu_subfontcolor"
            android:textSize="@dimen/menu_subtitle_font_size" />

    </LinearLayout>

</LinearLayout>