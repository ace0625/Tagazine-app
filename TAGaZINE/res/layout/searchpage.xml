<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/search_tapLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/menu_subbackgroundcolor"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_search_cancel"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_search_navibar_back_onoff" />

        <AutoCompleteTextView
            android:id="@+id/searchedittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center"
            android:layout_weight="1"
            android:background="@drawable/txt_search_navibar"
            android:completionThreshold="1"
            android:ems="10"
            android:text="    "
            android:imeOptions="actionSend"
            android:hint="         Search..." >

            <requestFocus />
        </AutoCompleteTextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/search_translucency60"
        android:orientation="vertical" >

    </LinearLayout>

</LinearLayout>
